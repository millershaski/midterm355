
<script src = "/clientHelper.js" type = "text/javascript"></script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow p-4 bg-secondary text-white">
                <h3 class="text-center mb-4">Edit Plant</h3>
                <form action = "update" method="POST" id = "plantForm" novalidate>
                    <div class="mb-3">
                        <label for="plantLabel" class="form-label">Plant Label:</label>
                        <input type="text" value = "{{label}}" name="plantLabel" class="form-control bg-dark text-white" required>
                        <div class="invalid-feedback">Please provide a plant label</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="species" class="form-label">Species:</label>
                        <input type="text" value = "{{species}}" name="species" class="form-control bg-dark text-white" required>
                        <div class="invalid-feedback">Please provide a species</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="plantDate" class="form-label">Planting Date:</label>
                        <input type="date" value = "{{plantDate}}" name="plantDate" class="form-control bg-dark text-white" required>                        
                        <div class="invalid-feedback">Please provide a date</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="wateringSchedule" class="form-label">Watering Schedule:</label>
                        <select name="wateringSchedule" class="form-select bg-dark text-white">
                            <option value="1" selected>Daily</option>
                            <option value="2">Every Other Day</option>
                            <option value="7">Weekly</option>
                            <option value="14">Biweekly</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="notes" class="form-label">Additional Notes:</label>
                        <textarea name="notes" class="form-control bg-dark text-white" rows="4">{{notes}}</textarea>
                    </div>                    
                    <button type="submit" class="btn btn-primary w-100">Save Plant</button>
                    <br><br>
                    <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal"> Delete Plant </button> 
                </form>                
            </div>
        </div>
    </div>
</div>

 <!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header bg-secondary text-white">
            <h5 class="modal-title" id="confirmDeleteLabel">Confirm Deletion</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body bg-secondary text-white">
            Are you sure you want to delete this plant? This action cannot be undone.
        </div>
        <div class="modal-footer bg-secondary text-white">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id = "confirmDeleteButton">Yes, Delete</button>
        </div>
    </div>
</div>

