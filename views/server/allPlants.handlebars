<h2>All Plants</h2>

<div class="container mt-4">
    <div class="row">
        {{#each plant}}
            
            <div class="col-md-4 mb-4">
                {{> singlePlantPartial}}
                <br><br>
            </div>
        {{/each}}

        <div class="col-md-4 mb-4">
            <div class="card bg-dark border-light text-light">
                <div class="card-body">
                    <a href="/plants/new" class="text-decoration-none text-light">
                        <h3 class="card-title">Add new plant +</h3>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
